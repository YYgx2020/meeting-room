/* pages/user/user.wxss */
/* pages/admin/admin.wxss */
page {
  background: #ededed;
}

.userInfo {
  position: relative;
  top: 0;
  width: 100%;
  height: 200rpx;
  background: #ffffff;
  /* border: 1rpx solid red; */
}

.avatar {
  position: absolute;
  left: 50rpx;
  width: 120rpx;
  height: 120rpx;
  top: 50%;
  margin-top: -60rpx;
  /* border-radius: 50%; */
  /* border: 1rpx solid red; */
}

.avatar image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.nickName {
  position: absolute;
  width: calc(100% - 180rpx);
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  left: 200rpx;
  top: 45rpx;
  font-size: 44rpx;
  color: black;
  font-weight: 700;
}

.userIcon {
  position: absolute;
  width: calc(100% - 180rpx);
  height: 60rpx;
  left: 200rpx;
  bottom: 30rpx;
}

.userIcon image {
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}

.userIcon text {
  display: inline-block;
  position: absolute;
  width: calc(100% - 30rpx);
  height: 60rpx;
  line-height: 60rpx;
  left: 45rpx;
  font-size: 28rpx;
  color: #1296db;
}

.appointedContainer {
  position: relative;
  width: 100%;
  height: 120rpx;
  top: 20rpx;
  background: #ffffff;
  /* border: 1rpx solid red; */
}

.Icon {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  left: 40rpx;
  top: 50%;
  margin-top: -35rpx;
  font-size: 36rpx;
}

.context {
  position: relative;
  width: 80%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  left: 140rpx;
  font-size: 36rpx;
  font-weight: 600;
  font-family: "Microsoft YaHei";
  letter-spacing: 3rpx;
  color: #191919;
}

.toRightIcon {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #adadad;
  /* top: 50%; */
}

.roomContainer {
  position: relative;
  width: 100%;
  height: 120rpx;
  top: 40rpx;
  background: #ffffff;
}

.feedbackContainer {
  position: relative;
  width: 100%;
  height: 120rpx;
  top: 60rpx;
  background: #ffffff;
}

.button {
  position: relative;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 120rpx;
  top: 60rpx;
  background: #ffffff;
  border: 0;
  border-radius: 0;
}

.button::after {
  border: 0;
  border-radius: 0;
}

.btnContext {
  position: absolute;
  width: 80%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  left: 140rpx;
  font-size: 36rpx;
  font-weight: 600;
  font-family: "Microsoft YaHei";
  letter-spacing: 3rpx;
  color: #191919;
}

.btn-hover {
  background-color: #ededed;
}