/* pages/showRoomInfo/showRoomInfo.wxss */

.showRoomInfoContainer {
  position: relative;
}

.showRoomCover {
  top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: calc(100% - 80rpx);
  margin-bottom: 20rpx;
  /* height: 120rpx; */
  /* line-height: 120rpx; */
  /* color: #3b3b3b; */
}

.showRoomCover image {
  width: 100%;
  border-radius: 20rpx;
  /* border-radius: 42px; */
  background: #ffffff;
  box-shadow: 8px 8px 16px #bdbdbd,
    -8px -8px 16px #ffffff;
}

.roomItem {
  position: relative;
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: calc(100% - 80rpx);
  height: 120rpx;
  line-height: 120rpx;
  color: #3b3b3b;
}

.roomItem::after {
  position: absolute;
  content: '';
  width: 86%;
  left: 50%;
  margin-left: -43%;
  height: 3rpx;
  background: #ededed;
  bottom: 0rpx;
}

.roomtip1 {
  position: absolute;
  width: 180rpx;
  height: 120rpx;
  line-height: 120rpx;
  left: 60rpx;
}

.roomtip2 {
  position: absolute;
  left: 270rpx;
  width: calc(100% - 270rpx);
  height: 60rpx;
  top: 50%;
  margin-top: -60rpx;
  line-height: 120rpx;
  text-align: left;
  font-size: 32rpx;
  color: black;
  font-weight: 700;
}

.roomBriefTextTip1 {
  display: inline-block;
  position: relative;
  width: calc(100% - 60rpx);
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 60rpx;
  color: #3b3b3b;
}

.roomBriefTextTip2 {
  position: relative;
  display: inline-block;
  padding-left: 60rpx;
  padding-right: 60rpx;
  width: calc(100% - 120rpx);
  margin: auto;
  font-size: 32rpx;
}

.space {
  position: relative;
  width: 100rpx;
  height: 80rpx;
}