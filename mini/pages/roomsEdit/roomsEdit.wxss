/* pages/roomsEdit/roomsEdit.wxss */
page {
  background: #ededed;
}

/* 头部信息展示 */
.header {
  position: relative;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #ededed;
}

.currentDate {
  position: absolute;
  left: 40rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 32rpx;
}

.headerTitle {
  position: absolute;
  width: 200rpx;
  left: 50%;
  margin-left: -100rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #191919;
}

.searchIcon {
  position: absolute;
  right: 120rpx;
  width: 60rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  top: 50%;
  margin-top: -40rpx;
  font-size: 44rpx;
}

.searchIcon_0 {
  position: absolute;
  right: 40rpx;
  width: 60rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  top: 50%;
  margin-top: -40rpx;
  font-size: 44rpx;
}

.addRoomIcon {
  position: absolute;
  right: 40rpx;
  width: 60rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  top: 50%;
  margin-top: -40rpx;
  font-size: 44rpx;
}

/* 顶部搜索框 */
.headerSearch {
  display: flex;
  flex-direction: row;
  position: relative;
  top: 0;
  width: 100%;
  height: 120rpx;
  background: #ededed;
}

.inputBox {
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 20rpx;
  width: 600rpx;
  height: 70rpx;
  top: 50%;
  margin-top: -35rpx;
  background: #ffffff;
  border-radius: 10rpx;
  /* border: 1rpx solid #e64340; */
}

.searchIcon2 {
  position: absolute;
  left: 20rpx;
  width: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  font-size: 40rpx;
  color: #adadad;
}

.inputBox input {
  position: absolute;
  left: 64rpx;
  width: calc(100% - 60rpx);
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  color: black;
  caret-color: #07c160;
}

.placeholder {
  font-size: 36rpx;
  color: #b2b2b2;
}

.clear {
  z-index: 10;
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  margin-top: -20rpx;
  text-align: center;
  line-height: 40rpx;
  color: #bbbbbb;
  font-size: 40rpx;
}

.cancel {
  position: absolute;
  right: 20rpx;
  width: 100rpx;
  height: 60rpx;
  top: 50%;
  margin-top: -30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  color: #576a93;
  /* border: 1rpx solid red; */
}

.conditionSearch {
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  text-align: left;
}

.conditionSearch text {
  font-size: 36rpx;
  color: #576a93;
}

/* 展示无搜索内容的提示 */
.showTip {
  position: absolute;
  top: 200rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.showTip text {
  font-size: 42rpx;
  color: #adadad;
}

/* 教室/会议室列表展示 */
.roomListContainer {
  position: relative;
  top: 0rpx;
  width: 100%;
  height: calc(100vh - 80rpx);
}

.roomScroll {
  position: relative;
  top: 0;
  height: 100%;
}

.item {
  display: flex;
}

.roomItem {
  position: relative;
  width: 100%;
  height: 150rpx;
  background: #ffffff;
  /* 关键代码 start */
  width: 100%;
  margin-left: -140rpx;
  transform: translateX(140rpx);
  /* -webkit-transition: all 0.4s; */
  transition: all 0.2s;
  /* -webkit-transform: translateX(140rpx); */
  /* border: 1rpx solid red; */
  /* 关键代码 end */
}

.roomItem1::after {
  position: absolute;
  /* 要加content属性，否则不生效 */
  content: '';
  left: 160rpx;
  bottom: 0;
  width: 86%;
  height: 2rpx;
  background: #ededed;
}

.roomCoverImg {
  position: absolute;
  left: 40rpx;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  margin-top: -50rpx;
}

.roomCoverImg image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.content {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 160rpx;
  width: 204rpx;
  top: 50%;
  margin-top: -50rpx;
  height: 100rpx;

}

.roomId {
  position: absolute;
  top: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 40rpx;
  font-weight: 700;
}

.roomType {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  font-size: 28rpx;
  color: #bbbbbb;
}

.moreInfo {
  position: absolute;
  width: 300rpx;
  height: 120rpx;
  right: 40rpx;
  top: 50%;
  margin-top: -60rpx;
  border-radius: 10px;
  background: #ffffff;
  box-shadow: 5px 5px 9px #f5f5f5,
    -5px -5px 9px #ffffff;
}

.currentStatus {
  z-index: 10;
  position: absolute;
  right: 50rpx;
  width: 260rpx;
  height: 50rpx;
  top: 30rpx;
  /* margin-top: 10rpx; */
}

.t1 {
  position: absolute;
  display: inline-block;
  /* vertical-align: bottom; */
  width: 150rpx;
  left: 0;
  height: 50rpx;
  line-height: 52rpx;
  text-align: left;
  font-size: 28rpx;
  color: #bbbbbb;
}

.t2 {
  display: inline-block;
  position: absolute;
  width: 120rpx;
  left: 150rpx;
  height: 50rpx;
  line-height: 52rpx;
  text-align: left;
