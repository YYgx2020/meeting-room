  color: #07c160;
}

.roomPeople {
  z-index: 10;
  position: absolute;
  right: 50rpx;
  width: 260rpx;
  height: 50rpx;
  top: 30rpx;
}

.roomPeople_t1 {
  position: absolute;
  display: inline-block;
  width: 160rpx;
  left: 0;
  height: 50rpx;
  line-height: 60rpx;
  text-align: left;
  font-size: 28rpx;
  color: #bbbbbb;
}

.roomPeople_t2 {
  display: inline-block;
  position: absolute;
  /* width: 95rpx; */
  left: 165rpx;
  /* height: 50rpx; */
  /* line-height: 60rpx; */
  text-align: left;
  font-size: 52rpx;
  font-weight: 700;
}

.toRightIcon {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 160rpx;
  line-height: 160rpx;
  color: #adadad;
}

/* 删除按钮 */
.delete {
  /* height: 100%; */
  width: 140rpx;
  height: 150rpx;

  /* 关键代码 start */
  transform: translateX(150rpx);
  /* -webkit-transition: all 0.4s; */
  transition: all 0.2s;
  /* -webkit-transform: translateX(150rpx); */
  /* 关键代码 end */
}

.deleteText {
  display: inline-block;
  position: absolute;
  width: 140rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ffffff;
  /* border-radius: 16rpx; */
  background: #e64340;
}

/* 关键代码 start --> 向左滑动 */
.touch-move-active .roomItem,
.touch-move-active .delete {
  /* -webkit-transform: translateX(0); */
  transform: translateX(0rpx);
}

/* 关键代码 end */

.roomListNone {
  position: absolute;
