/* pages/adminLogin/adminLogin.wxss */
.login-wrapper {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: top;
}

/* 老师登录表单 */
.admin-login-form {
  position: relative;
  width: 100%;
  height: 400rpx;
}

/* 各类表单 */
.user-phone,
.user-password {
  position: relative;
  margin: auto;
  width: 86%;
  height: 120rpx;
  border-bottom: 1rpx solid #ededed;
}

.form-tip {
  position: absolute;
  left: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: black;
}

input {
  position: absolute;
  left: 180rpx;
  width: calc(100% - 300rpx);
  height: 60rpx;
  top: 50%;
  margin-top: -30rpx;
  font-size: 36rpx;
}

/* 眼睛图标 */
.eye-icon {
  z-index: 30;
  display: inline-block;
  position: absolute;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  top: 50%;
  margin-top: -50rpx;
  text-align: center;
  /* border: 1rpx solid red; */
  font-size: 44rpx;
}

.submit-button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  top: 30rpx;
}

.hover-button {
  opacity: 0.8;
  background-color: #0c6cbf;
}

.tip {
  position: relative;
  margin: auto;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  padding-left: 20rpx;
}

.tip text {
  font-size: 40rpx;
  color: #0c6cbf;
}
