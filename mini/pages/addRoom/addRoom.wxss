.briefIntroductionForm {
  position: relative;
  margin: auto;
  width: 86%;
  height: 120rpx;
}

.imporant {
  position: absolute;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: red;
}

.xing {
  font-size: 28rpx;
  color: red;
}

.roomIdTip,
.roomNameTip,
.roomContactTip,
.roomTypeTip,
.briefIntroductionTip,
.phone,
.roomPeopleTip {
  position: absolute;
  left: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: black;
}

.roomIdFrom input {
  position: absolute;
  left: 150rpx;
  width: calc(100% - 150rpx);
  height: 60rpx;
  top: 50%;
  margin-top: -30rpx;
  font-size: 36rpx;
}

.placeholder {
  font-size: 36rpx;
  color: #b2b2b2;
}

