/* pages/addRoom/addRoom.wxss */


/* 头部提示栏 */
.headerMsg {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 0;
  width: 100%;
  height: 280rpx;
  background: #ededed;
  /* border: 1rpx solid red; */
}

.headTitle {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  font-size: 40rpx;
  padding-left: 50rpx;
  color: black;
  font-weight: 700;
}

.headContent {
  display: inline-block;
  width: 100%;
  height: 160rpx;
  text-align: left;
  padding-left: 50rpx;
  font-size: 28rpx;
  color: #767676;
  line-height: 40rpx;
}

/* 表单内容区域 */
/* 编号 */
.roomIdFrom,
.roomNameFrom,
.roomTypeForm,
.roomContactName,
.roomContactPhone,
.roomPeopleForm {
  position: relative;
  margin: auto;
  width: 86%;
  height: 120rpx;
  border-bottom: 2rpx solid #ededed;
}

.phoneErrorTip {
  position: relative;
  top: 10rpx;
  left: 180rpx;
  width: 360rpx;
  height: 40rpx;
  line-height: 40rpx;
  /* border: 1rpx solid red; */
}

.phoneErrorTip text {
  font-size: 28rpx;
  color: red;
}

/* 展示图片 */
.showRoomCover {
  position: relative;
  margin: auto;
  top: 20rpx;
  margin-bottom: 40rpx;
  width: 86%;
  border-radius: 20rpx;
}

.reChoose {
  display: inline-block;
  top: 20rpx;
  position: relative;
  width: 100%;
  margin: auto;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 32rpx;
  color: #576a93;
}

.showRoomCover image {
  width: 100%;
  border-radius: 20rpx;
  /* border-radius: 42px; */
  background: #ffffff;
  box-shadow: 8px 8px 16px #bdbdbd,
    -8px -8px 16px #ffffff;
}

.chooseImage {
  position: relative;
  margin: auto;
  width: 86%;
  height: 200rpx;
  border-bottom: 2rpx solid #ededed;
}

.tip1 {
  /* display: inline-block; */
  position: absolute;
  top: 50%;
  margin-top: -75rpx;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  background: #ededed;
}

.tip1 text {
  font-size: 90rpx;
  color: #b2b2b2;
}

.tip2 {
  display: inline-block;
  position: absolute;
  left: 180rpx;
  width: 300rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: left;
  font-size: 36rpx;
  color: #b2b2b2;
}

