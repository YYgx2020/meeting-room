/* pages/teacherRegistered/teacherRegistered.wxss */

.headerTip {
  position: relative;
  padding-left: 40rpx;
  width: calc(100% - 40rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}

.teacher_number,
.teacher_name,
.teacher_phone,
.teacher_email,
.lab {
  position: relative;
  margin: auto;
  width: 90%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: #191919;
  border-bottom: 2rpx solid #ededed;
}

.phoneErrorTip {
  position: relative;
  top: 10rpx;
  left: 180rpx;
  width: 360rpx;
  height: 40rpx;
  line-height: 40rpx;
  /* border: 1rpx solid red; */
}

.phoneErrorTip text {
  font-size: 28rpx;
  color: red;
}

.imporant {
  position: absolute;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: red;
}

.tip1 {
  position: absolute;
  width: 180rpx;
  padding-left: 20rpx;
  height: 120rpx;
  /* left: 40rpx; */
  line-height: 120rpx;
}

.tip2 {
  position: absolute;
  left: 180rpx;
  /* padding-right: 40rpx; */
  width: calc(100% - 180rpx);
  height: 120rpx;
  line-height: 120rpx;
}

.submit {
  position: relative;
  top: 40rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}