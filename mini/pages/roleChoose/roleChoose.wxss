.title_tip {
  position: relative;
  top: 40rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 44rpx;
}

.student, .teacher {
  position: relative;
  top: 100rpx;
  width: 100%;
  height: 300rpx;
  margin-top: 60rpx;
}

image {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background-color: #ededed;
  border-radius: 50%;
  left: 50%;
  margin-left: -100rpx;
}

.tip {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  bottom: 20rpx;
  text-align: center;
}

