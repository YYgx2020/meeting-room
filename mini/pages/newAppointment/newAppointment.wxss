/* pages/newAppointment/newAppointment.wxss */

.header {
  position: relative;
  width: calc(100% - 40rpx);
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  padding-left: 40rpx;
}

.header text {
  font-size: 40rpx;
  color: black;
  font-weight: 700;
}

.formContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.roomContactTip {
  position: absolute;
  left: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: black;
}

.imporant {
  position: absolute;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  color: red;
}

.roomContactName,
.roomContactPhone {
  position: relative;
  margin: auto;
  width: 86%;
  height: 120rpx;
  border-bottom: 2rpx solid #ededed;
}

/* 联系人姓名 */
.roomContactName input {
  position: absolute;
  left: 150rpx;
  width: calc(100% - 150rpx);
  height: 60rpx;
  top: 50%;
  margin-top: -30rpx;
  font-size: 36rpx;
}

/* 联系人电话号码 */
.roomContactPhone input {
  position: absolute;
  left: 150rpx;
  width: calc(100% - 150rpx);
  height: 60rpx;
  top: 50%;
  margin-top: -30rpx;
  font-size: 36rpx;
}

.phoneErrorTip {
  position: relative;
  top: 10rpx;
  left: 0rpx;
  width: 360rpx;
  height: 40rpx;
  line-height: 40rpx;
  /* border: 1rpx solid red; */
}

.phoneErrorTip text {
  font-size: 28rpx;
  color: red;
}

.timeChooseTip {
  position: relative;
  top: 20rpx;
  width: 86%;
  height: 200rpx;
  /* border: 1rpx solid red; */
}

.timeChooseTip text {
  font-size: 28rpx;
  color: #b2b2b2;
}

.tip1 {
  display: inline-block;
  position: relative;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: left;
}

.tip2 {
  display: inline-block;
  position: relative;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  /* padding-left: 20rpx; */
}

.timeChooseTip .tip3_1 {
  font-weight: 700;
  /* color: black; */
  text-decoration-line: underline;
}

.time {
  position: relative;
  /* top: 20rpx; */
  /* width: 640rpx; */
  width: 86%;
  margin: auto;
  height: 240rpx;
}

.time text {
  font-size: 36rpx;
}

.startTime,
.endTime {
  position: relative;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #ededed;
}

.things {
  position: relative;
  top: 40rpx;
  /* height: 60rpx; */
  /* line-height: 60rpx; */
  width: 86%;
  height: 350rpx;
}

.thingsTip {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
}

textarea {
  position: absolute;
  top: 70rpx;
  left: 50%;
  width: calc(100% - 40rpx);
  margin-left: -50%;
  height: 250rpx;
  padding: 20rpx;
  /* background: #ededed; */
  border: 3rpx solid #ededed;
  border-radius: 20rpx;
  /* color: #b2b2b2; */
}

.textLength {
  position: absolute;
  bottom: 60rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #adadad;
  /* border: 1rpx solid red; */

}

.confirmBtn {
  position: relative;
  top: 80rpx;
  margin-bottom: 100rpx;
  /* bottom: 160rpx; */
  width: 100%;
}

.btn-hover {
  background-color: #ededed;
}